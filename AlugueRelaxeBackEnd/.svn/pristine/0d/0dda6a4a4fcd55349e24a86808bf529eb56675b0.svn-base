<form target="pagseguro" method="post" action="https://pagseguro.uol.com.br/v2/checkout/payment.html">
<!-- Campos obrigatórios -->
<input type="hidden" name="receiverEmail" value="${EMAIL_ALUGUE_RELAXE}">
<input type="hidden" name="currency" value="BRL">
<input type="hidden" name="itemId1" value="${CODIGO_PLANO}">
<input type="hidden" name="itemDescription1" value="${DESCRICAO_DO_PLANO}">
<input type="hidden" name="itemAmount1" value="${VALOR_TOTAL}">
<input type="hidden" name="itemQuantity1" value="1">
<input type="hidden" name="itemWeight1" value="0">
<input type="hidden" name="reference" value="${ID_FATURA}">
<input type="hidden" name="senderName" value="${NOME_CLIENTE}">
<input type="hidden" name="senderEmail" value="${EMAIL_CLIENTE}">
<input type="image" name="submit" src="https://p.simg.uol.com.br/out/pagseguro/i/botoes/pagamentos/120x53-pagar.gif" alt="Pague com PagSeguro">
</form>